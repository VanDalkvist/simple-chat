div.navbar.navbar-default.navbar-fixed-top(ng-controller='NavbarCtrl')
    div
        div.navbar-header
            button.navbar-toggle(type='button', ng-click='isCollapsed = !isCollapsed')
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a.navbar-brand(href='/') Simple-chat

        div#navbar-main.navbar-collapse.collapse(collapse='isCollapsed')
            ul.nav.navbar-nav
                li(ng-repeat='item in menu', ng-class='{active: isActive(item.link)}')
                    a(ng-href='{{item.link}}') {{item.title}}

                li(ng-if='isAdmin()', ng-class='{active: isActive("/admin")}')
                    a(href='/admin') Admin

            ul.nav.navbar-nav.navbar-right

                li(ng-if='!isLoggedIn()', ng-class='{active: isActive("/login")}')
                    a(href='/login') Login

                li(class="user-info", ng-if='isLoggedIn()')
                    p.navbar-text
                        | Hello
                        a(href='/settings')
                            |  {{ getCurrentUser().name }}

                li(ng-if='isLoggedIn()', ng-class='{active: isActive("/settings")}')
                    a(href='/settings')
                        span.glyphicon.glyphicon-cog

                li(ng-if='isLoggedIn()', ng-class='{active: isActive("/logout")}', style="padding-right: 25px;")
                    a(href='', ng-click='logout()') Logout
